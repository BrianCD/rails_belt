<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <a href="/logout">Log Out</a>
    <br>
    Name: <%=@user.first_name%> <%=@user.last_name%>
    <br>
    Amount Needed: $<%=@user.goal%>
    <br>
    Amount Raised: $<%=@user.get_raised%>
    <h1>Lost of people who are lending you money:</h1>
    <table>
      <thead>
        <th>
          Name
        </th>
        <th>
          Email
        </th>
        <th>
          Amount Lent
        </th>
      </thead>
      <tbody>
        <% @user.histories.each do |loan| %>
          <tr>
            <td>
              <%= loan.lender.first_name %> <%=loan.lender.last_name%>
            </td>
            <td>
              <%= loan.lender.email %>
            </td>
            <td>
              $<%= loan.amount %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </body>
</html>
